{
  "name": "@jgleman/color-box",
  "version": "0.6.0",
  "description": "Another JavaScript/TypeScript Color Utility Library",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "scripts": {
    "clean:dist": "rimraf dist",
    "test": "jest",
    "build": "npm run clean:dist && npm run test && pkgroll --target-es2020 --minify && npm run docs",
    "watch": "pkgroll --watch --target-es2020 --minify",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgleman/color-box.git"
  },
  "keywords": [
    "typescript",
    "color"
  ],
  "author": "Jason Gleman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgleman/color-box/issues"
  },
  "homepage": "https://github.com/jgleman/color-box#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.3.1",
    "pkgroll": "^1.8.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}
